# Durj Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# DATABASE (Supabase PostgreSQL)
# =============================================================================
# Connection string for Prisma (use connection pooler URL)
DATABASE_URL="postgresql://postgres.[project-id]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection for migrations (use direct URL, not pooler)
DIRECT_URL="postgresql://postgres.[project-id]:[password]@db.[project-id].supabase.co:5432/postgres"

# =============================================================================
# SUPABASE (Storage & Auth)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL="https://[project-id].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (https://console.cloud.google.com)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Microsoft/Azure OAuth (https://portal.azure.com)
AZURE_AD_CLIENT_ID=""
AZURE_AD_CLIENT_SECRET=""
AZURE_AD_TENANT_ID="common"

# =============================================================================
# STRIPE BILLING
# =============================================================================
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# Price IDs (create in Stripe Dashboard)
STRIPE_PRICE_STARTER_MONTHLY=""
STRIPE_PRICE_STARTER_YEARLY=""
STRIPE_PRICE_PROFESSIONAL_MONTHLY=""
STRIPE_PRICE_PROFESSIONAL_YEARLY=""

# =============================================================================
# EMAIL (Resend)
# =============================================================================
RESEND_API_KEY=""
EMAIL_FROM="Durj <noreply@yourdomain.com>"

# =============================================================================
# AI CHATBOT (OpenAI)
# =============================================================================
OPENAI_API_KEY=""

# =============================================================================
# APPLICATION
# =============================================================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Durj"

# Multi-tenant subdomain configuration
# In production: durj.com (subdomains will be: acme.durj.com)
# In development: localhost:3000 (subdomains will be: acme.localhost:3000)
NEXT_PUBLIC_APP_DOMAIN="localhost:3000"

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Enable dev auth with test users (admin@test.local/admin123)
DEV_AUTH_ENABLED="true"

# =============================================================================
# RATE LIMITING (Upstash Redis)
# =============================================================================
# Upstash Redis for distributed rate limiting (required for production)
# Create a free Redis instance at https://console.upstash.com
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Optional: Customize rate limits
RATE_LIMIT_MAX="60"
RATE_LIMIT_WINDOW_MS="60000"

# =============================================================================
# MONITORING (Optional)
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
SENTRY_ORG=""
SENTRY_PROJECT=""
