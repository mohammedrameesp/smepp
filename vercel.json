{
  "buildCommand": "prisma generate && next build",
  "framework": "nextjs",
  "installCommand": "npm install --legacy-peer-deps",
  "regions": ["bom1"],
  "crons": [
    {
      "path": "/api/super-admin/backups/cron",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/cleanup-deleted-users",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/document-expiry-alerts",
      "schedule": "0 6 * * *"
    }
  ],
  "functions": {
    "app/api/**/*": {
      "maxDuration": 30
    },
    "app/api/super-admin/backups/cron/route.ts": {
      "maxDuration": 300
    },
    "app/api/super-admin/backups/restore/route.ts": {
      "maxDuration": 300
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
